#:kivy 1.0.9

<rightPanel>:

    size_hint: .5,1
    orientation: 'vertical'
    # padding: 10
    # spacing: 10

    Button:
        #size_hint: 1,0.2
        on_press: root.btnStatusPressed()
        # id: btPressMe
        # text: "Press me, bitch"
        text: root.btText

    BoxLayout:  # Channels
        orientation: 'horizontal'
        #size_hint: 1,0.8
        # spacing: 10
        # padding: 10

        BoxLayout:  # Channel A
            orientation: 'vertical'
            # spacing: 10
            # padding: 10

            BoxLayout:  #
                orientation: 'horizontal' # Potes V/div, offset
                #size_hint: 1,0.5
                # spacing: 10
                # padding: 10

                Knob:
                    #size_hint: 1,1
                    size: 100, 100
                    id: cha_vdiv
                    value: 0
                    min: 0
                    step: 1
                    max: 7
                    curve: 1                                # A mayor valor mayor sensibilidad. curve=1 es lineal.
                    knobimg_source: "img/knob_black.png"
                    markeroff_color: 0.0, 0.0, .0, 1
                    knobimg_size: 0.5
                    marker_img: "img/bline3.png"
                    show_marker: True
                    show_label: True
                    text: 'holaa'

                Knob:
                    #size_hint: 1,1
                    id: cha_offset
                    value: 0
                    min: 0
                    step: 1
                    max: 7
                    curve: 1                                # A mayor valor mayor sensibilidad. curve=1 es lineal.
                    knobimg_source: "img/knob_black.png"
                    markeroff_color: 0.0, 0.0, .0, 1
                    knobimg_size: 0.5
                    marker_img: "img/bline3.png"
                    show_marker: True

            BoxLayout:
                orientation: 'horizontal'
                #size_hint: 1,0.5
                halign: 'center'
                valign: 'middle'
                Switch:
                    id: btn_ChA_On
                    text: 'AA'
                    state: 'down'

        BoxLayout:  # Channel B
            orientation: 'vertical'

            BoxLayout:  #
                orientation: 'horizontal' # Potes V/div, offset
                #size_hint: 1,0.5
                # spacing: 10
                # padding: 10

                Knob:
                    #size_hint: 0.5,1
                    id: chb_vdiv
                    value: 0
                    min: 0
                    step: 1
                    max: 7
                    curve: 1                                # A mayor valor mayor sensibilidad. curve=1 es lineal.
                    knobimg_source: "img/knob_black.png"
                    markeroff_color: 0.0, 0.0, .0, 1
                    knobimg_size: 0.5
                    marker_img: "img/bline3.png"
                    show_marker: True

                Knob:
                    #size_hint: 0.5,1
                    id: chb_offset
                    value: 0
                    min: 0
                    step: 1
                    max: 7
                    curve: 1                                # A mayor valor mayor sensibilidad. curve=1 es lineal.
                    knobimg_source: "img/knob_black.png"
                    markeroff_color: 0.0, 0.0, .0, 1
                    knobimg_size: 0.5
                    marker_img: "img/bline3.png"
                    show_marker: True

            BoxLayout:
                orientation: 'horizontal'
                #size_hint: 1,0.5
                halign: 'center'
                valign: 'middle'
                Switch:
                    id: btn_ChB_On
                    text: 'AA'
                    state: 'down'

